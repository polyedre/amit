# GNU General Public License for more details.

# You should have received a copy of the GNU General Public License
# along with this program.  If not, see <https://www.gnu.org/licenses/>.

IP=$1
echo
# Fast nmap
nmap $IP -oN $IP.fast.nmap | grep -A 100 PORT | sed '/^$/d' | grep -v "Nmap done"
PORTS=$(cat $IP.fast.nmap | grep ^[0-9] | cut -d '/' -f 1 | tr '\n' ',' | sed s/,$//)
echo
# Detailed nmap scan of discovered ports
nmap -A -p${PORTS} $IP -oN $IP.nmap -oA $IP >/dev/null
pyscan $IP.xml
nmap -A -p- $IP -oN $IP-all.nmap
